<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cui.upsa.es.vjsantojaca.battleShip"
    android:versionCode="3"
    android:versionName="1.5" >

    <uses-permission android:name="android.permission.NFC" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="cui.upsa.es.vjsantojaca.battleShip.InfoActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cui.upsa.es.vjsantojaca.battleShip.ColocarBarcoActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cui.upsa.es.vjsantojaca.battleShip.JuegoActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cui.upsa.es.vjsantojaca.battleShip.FinActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>